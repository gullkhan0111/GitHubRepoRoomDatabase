<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="horizontal"
    android:background="#2d3035">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#2d3035">

        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#2d3035"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/followers_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/ktolin" />

            <TextView
                android:id="@+id/fragment_koktlin_repoName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10sp"
                android:text="khan"
                android:textColor="#fff"
                android:textSize="20sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="#fff"
                android:src="@drawable/ic_stat_watchers"
                android:layout_marginLeft="230dp"/>

            <TextView
                android:id="@+id/kotlinwatchers"
                android:layout_height="90dp"
                android:layout_width="80dp"
                android:text="22"
                android:layout_marginLeft="230dp"
                android:textSize="20dp"
                android:textColor="#fff" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="#fff"
                android:src="@drawable/ic_action_star"
                android:layout_marginLeft="280dp"/>

            <TextView
                android:id="@+id/kotlinstar"
                android:layout_height="90dp"
                android:layout_width="80dp"
                android:text="22"
                android:layout_marginLeft="280dp"
                android:textSize="20dp"
                android:textColor="#fff" />


        </LinearLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>

